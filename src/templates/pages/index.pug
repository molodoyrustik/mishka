extends ../layouts/main-layout.pug

block title
  title Главная

block content
  <!-- / ========= header ========= \ -->
  header.page-header
    .container
      .page-header__wrapper
        a(href="#").page-header__logo
          picture
            source(media="(min-width: 1250px)" srcset="/images/desktop/main-logo.png 1x, /images/desktop/main-logo@2x.png 2x")
            source(media="(min-width: 768px)" srcset="/images/ipad/main-logo.png 1x, /images/ipad/main-logo@2x.png 2x")
            img(width="86px" height="35px" src="/images/iphone/main-logo.png" srcset='/images/iphone/main-logo@2x.png 2x' alt="").page-header__logo-image
        nav.main-nav.main-nav--closed.main-nav--nojs
          button.main-nav__toggle
            span.visually-hidden Открыть меню
          .main-nav__wrapper
            ul.main-nav__list.site-list
              li.site-list__item
                a(href="#").site-list__link Каталог товаров
              li.site-list__item
                a(href="#").site-list__link Вязание на заказ
            ul.main-nav__list.user-list
              li.user-list__item
                a(href="#").user-list__login
                  svg.user-list__login-icon(width='16', height='16', xmlns='http://www.w3.org/2000/svg', viewBox='0 0 16 16')
                    polygon(points='0 7 7.01 7 7.01 4.06 10.96 8.01 7.01 11.91 7.01 9.06 0 9.02 0 7')
                    polygon(points='7.01 0 7.01 2 14.03 2 14.03 13.99 7.01 13.99 7.01 16 16 16 16 0 7.01 0')
                  span Войти
        .user-block
          ul.user-block__list
            li.user-block__item
              a(href="#").user-block__link Поиск по сайту
            li.user-block__item
              a(href="#").user-block__link Корзина: пока пуста
