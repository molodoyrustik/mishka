footer.page-footer
    .container
      .page-footer__wrapper
        a(href="#").page-footer__logo
          svg(width='103', height='34').page-footer__logo-icon
            use(xlink:href='#logo-footer')
        .page-footer__social.social
          ul.social__list
            li.social__item
              a(href="#").social__link.social__link--insta
                span Мы в контакте
                svg(width='22', height='21')
                  use(xlink:href='#icon-insta')
            li.social__item
              a(href="#").social__link.social__link--fb
                span Мы в инстаграмме
                svg(width='15', height='28')
                  use(xlink:href='#icon-fb')
            li.social__item
              a(href="#").social__link.social__link--twitter
                span Мы в фейсбуке
                svg(width='24', height='20')
                  use(xlink:href='#icon-twitter')
        a(href="").page-footer__copyright.copyright
          .copyright__text Разработано:
          svg(width='35', height='35').copyright__icon 
            use(xlink:href='#logo-htmlacademy')

script(src='/js/foundation.js' defer)
script(src='/js/main.js' defer)
